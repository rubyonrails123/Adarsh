<h1> Client listing</h1>
<table>
  <tr>
    <th>firstname</th>
    <th>lastname</th>
    <th>age</th>
    <th>companyname</th>
    <th>email</th>
    <th>password</th>

  </tr>
  <% @client.each do |client| %>
      <tr>

        <td><%= client.firstname %></td>
        <td><%= client.lastname  %></td>
        <td><%= client.age %></td>
        <td><%= client.companyname %></td>
        <td><%= client.email  %></td>
        <td><%= client.password %></td>

        <td><%= link_to 'Edit', edit_client_path(client) %></td>

        <td><%= link_to 'Destroy',  { action: :destroy, id: client.id } %></td>
      </tr>
  <% end %>
</table>
